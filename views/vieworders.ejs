<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f7f7;
            color: #333;
        }
        .order-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
        }
        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .order-header h4 {
            margin: 0;
        }
        .order-details {
            margin-bottom: 20px;
        }
        .product-card {
            background-color: #f1f1f1;
            border-radius: 5px;
            margin-bottom: 10px;
            padding: 10px;
        }
        .product-image {
            max-width: 100px;
            border-radius: 5px;
        }
        .product-details {
            flex: 1;
            margin-left: 15px;
        }
        .buttons {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }
        .btn-complete {
            background-color: #28a745;
            color: white;
        }
        .btn-cancel {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>

<div class="container">
    <h2 class="my-4">Order Management</h2>

    <% orders.forEach(function(order) { %>
        <div class="order-card">
            <div class="order-header">
                <h4>Order ID: <%= order.orderId %></h4>
                <span>Status: <%= order.status %></span>
            </div>
            <div class="order-details">
                <p><strong>User:</strong> <%= order.user.name %> (<%= order.user.email %>)</p>
                <p><strong>Phone:</strong> <%= order.user.phone %></p>
                <p><strong>Address:</strong> <%= order.address %></p>
                <p><strong>Total Price:</strong> ₹<%= order.totalPrice %></p>
                <p><strong>Order Date:</strong> <%= order.createdAt.toLocaleString() %></p>
                <hr>
                <h5>Products</h5>
                <% order.products.forEach(function(product) { %>
                    <div class="product-card d-flex">
                        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image" class="product-image">
                        <div class="product-details">
                            <p><strong>Name:</strong> <%= product.name %></p>
                            <p><strong>Price:</strong> ₹<%= product.price %></p>
                            <p><strong>Category:</strong> <%= product.category %></p>
                            <p><strong>Stock:</strong> <%= product.stock %> left</p>
                            <p><strong>Description:</strong> <%= product.description %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="buttons">
                <button 
                    type="button" 
                    class="btn btn-primary btn-assign" 
                    data-order-id="<%= order.orderId %>" 
                    <% if (order.status !== 'Processing') { %> 
                        disabled 
                    <% } %>>
                    Assigned to Delivery Partner
                </button>
                <form action="/order/cancel/<%= order.orderId %>" method="POST">
                    <button type="submit" class="btn btn-cancel">Cancel Order</button>
                </form>
            </div>
            
            
        </div>
    <% }); %>

</div>

<script>

document.querySelectorAll('.btn-assign').forEach(function(button) {
    button.addEventListener('click', function() {
        const orderId = button.getAttribute('data-order-id');
        button.innerHTML = 'Assigning...';
       fetch(`/order/assign/${orderId}`, {
           method: 'POST'
       }).then(function(response) {
           
           if(response.ok) {
               button.innerHTML = 'Assigned';
               button.disabled = true;
           }}).catch(function(error) {
               console.error(error);
               button.innerHTML = 'Assign to Delivery Partner';});
    });
});

   
</script>
</body>
</html>
